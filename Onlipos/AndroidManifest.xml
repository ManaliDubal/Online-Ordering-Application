<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="biz.n2esolutions.onlipos"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name"
    	android:name=".library.OnliposApplicationManager">
    	
        <activity android:name=".OnliposActivity"
            	android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".SearchActivity"
             	android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCHACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity android:name=".retrieveData"
            android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.RETRIEVEDATA" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity android:name=".CategoryActivity"
            android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.CATEGORYACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        
        <activity android:name=".SelectCategoryActivity"
            android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SELECTCATEGORYACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>      
 		<activity android:name=".ListOfItemActivity"
 		    android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.LISTOFITEMACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity> 
        <activity android:name=".CheckoutActivity"
            android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.CHECKOUTACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity> 
        <!-- Single List Item View -->
        <activity
            android:screenOrientation="portrait"
            android:label="Order Menu Item"
            android:name="OrderMenuItemActivity" >
        </activity>
        <activity
            android:label="Print Receipt"
            android:screenOrientation="portrait"
            android:name="PrintReceiptActivity" >
        </activity>
        <activity
            android:label="Set IP"
            android:screenOrientation="portrait"
            android:name="SetIPActivity" >
        </activity>
    </application>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<supports-screens android:normalScreens="true" />
</manifest>