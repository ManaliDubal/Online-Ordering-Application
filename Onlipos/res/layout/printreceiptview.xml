<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top">
		<!-- Name Label -->
  		<TextView

            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="6dip"
            android:paddingBottom="2dip" android:layout_marginLeft="5dip"/>
        <TextView

            android:id="@+id/qty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="6dip"
            android:paddingBottom="2dip" android:layout_marginLeft="160dip"/>
		<!-- Description label -->
        <TextView

            android:id="@+id/price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:textSize="14sp"
            android:paddingBottom="2dip" android:layout_marginLeft="190dip" android:layout_marginTop="6dip">
        </TextView>
        
       <TextView

            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"         
            android:paddingBottom="2dip"
            android:gravity="left" android:layout_marginLeft="265dip" android:layout_marginTop="6dip">
        </TextView>

</RelativeLayout>